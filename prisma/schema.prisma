generator client {
  provider = "prisma-client-js"  // Gera o cliente Prisma para interação com o banco
}

datasource db {
  provider = "postgresql"  // Usa o PostgreSQL como banco de dados
  url      = env("DATABASE_URL")  // A URL de conexão com o banco, definida no arquivo .env
}

model Familia {
  familiaId     String   @id @default(uuid())  // ID único para a familia
  numeroContrato Int     // Número do contrato da família
  titular       String  // Nome do titular da família
  dataCriacao   DateTime @default(now())  // Data de criação da família
  parentes      Parente[]  // Relacionamento com os parentes
}

model Parente {
  parenteId     String   @id @default(uuid())  // ID único para o parente
  nome          String  // Nome do parente
  fotoFalecido  String?  // Foto do falecido (opcional)
  dataNascimento DateTime  // Data de nascimento do parente
  dataObito     DateTime  // Data de falecimento do parente
  familiaId     String  // ID da família a qual o parente pertence
  familia       Familia @relation(fields: [familiaId], references: [familiaId])  // Relação com a família
}
